<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>FIFO App</title>
        <!--stylesheet-->
        <link rel="stylesheet" href="/style.css">
        <!--GOOGLE FONT-->
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Edu+TAS+Beginner:wght@500&display=swap" rel="stylesheet">
        <!--ICONS-->
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css"
        integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay" crossorigin="anonymous">

    </head>
    <body>
        <section class="fifobuddy-container">
            <h2> FIFO Buddy</h2>
            <section class="item">
                <!-- forms can interface DIRECTLY with some of our CRUD operations (ex. sending post requests to server) -->
                <form action="/" method="POST" class="item-header">
                    <input type="text" name="item" placeholder="Name of Item">
                    <input type="date" name="expirationDate" value="expirationDate">
                <button type="submit"><span class="fas fa-plus">Add Item</span></button>
                </form>
                <ul class="item-list">
                    <% fifoBuddyItems.forEach(item => {%> <!--Can name parameter whatever, let's use "task" though to line up with the name of our db collection-->
                        <li class="fifo-list-item">
                            <div class="fifo-list-item-name">
                                <%= item.item %>
                            </div>
                            <div class="fifo-list-item-expiration-date">
                                <span class="expiration-prefix">Expiration: </span><%= item.expirationDate %>
                            </div>
                            <!-- edit button -->
                            <!-- grab the id of the task we're currently on and send it -->
                            <div class="button-container">
                                <a href="/edit/<%=item._id %>" class="edit"><span class="fas fa-edit"></span></a>
                                <a href="/remove/<%=item._id %>" class="remove"><span class="fas fa-trash"></span></a>
                            </div>
                        </li>
                    <% }) %>
                </ul>
            </section>
        </section>        
    </body>
</html>